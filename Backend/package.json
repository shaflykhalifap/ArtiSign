    "@hapi/vision": "^7.0.3",
    "@tensorflow/tfjs": "^4.22.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "fluent-ffmpeg": "^2.1.3",
    "gtts": "^0.2.1",
    "hapi-swagger": "^17.3.2",
